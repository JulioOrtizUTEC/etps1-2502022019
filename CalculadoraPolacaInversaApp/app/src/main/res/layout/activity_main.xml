<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtValor2"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Digite un numero"
        android:inputType="textPersonName"
        android:onClick="Operar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <EditText
        android:id="@+id/edtValor1"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Digite un numero"
        android:inputType="textPersonName"
        android:onClick="Operar"
        app:layout_constraintBottom_toTopOf="@+id/edtValor2"
        app:layout_constraintEnd_toEndOf="@+id/edtValor2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtValor2" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="287dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:onClick="Operar"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/edtValor2"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="@+id/edtValor2"
        app:layout_constraintTop_toBottomOf="@+id/edtSigno" />

    <TextView
        android:id="@+id/txvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular"
        tools:textColor="#162B97" />

    <EditText
        android:id="@+id/edtSigno"
        android:layout_width="258dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Digite un signo aritmetico"
        android:inputType="textPersonName"
        android:onClick="Operar"
        app:layout_constraintEnd_toEndOf="@+id/edtValor2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtValor2"
        app:layout_constraintTop_toBottomOf="@+id/edtValor2" />

</androidx.constraintlayout.widget.ConstraintLayout>